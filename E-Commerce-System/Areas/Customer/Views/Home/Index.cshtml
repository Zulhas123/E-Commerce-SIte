@using E_Commerce_System.Models;
@model X.PagedList.IPagedList<Products>
    @{
    ViewData["Title"] = "Home Page";
    }

    <br />
    <br />
    <div class="row">
        @foreach(var product in Model)
        {
        <div class="col-4">
            <div class="card-md-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: blueviolet">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height:300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:mediumblue"><b>Price : @product.Price</b></label>

                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-warning pull-right btn-outline-info">For Details</a>
                    </div>
                </div>
            </div>

        </div>
        }
    </div>
<div>
    @*@Html.pagedListPager(Model,c=>Href("~/Customer/Home/Index?page="+c))*@
</div>
 
